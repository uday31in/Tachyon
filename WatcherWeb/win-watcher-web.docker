FROM my/core

LABEL Description="TachyonWeb" Vendor="ECG CAT" Version="1.0"

RUN powershell -Command \
    Add-WindowsFeature  Web-WebServer,Web-WebSockets
	
RUN powershell -Command \
    Add-WindowsFeature  Web-Asp-Net45
	
ADD http://go.microsoft.com/fwlink/?LinkID=309497 /webdeploy.msi

	
ADD /Tachyon/WatcherWeb /inetpub/wwwroot/

EXPOSE 80

CMD [ "ping", "localhost", "-t" ]
